<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- ... existing head content ... -->
    <link href="/css/output.css" rel="stylesheet" />
    <!-- Include AOS CSS if not already included -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <!-- Custom Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <!-- Prism.js CSS -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.27.0/themes/prism.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="bg-gray-100 font-sans flex flex-col min-h-screen">
    <nav class="bg-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center">
            <!-- Logo or site title -->
            <a href="/" class="text-white text-xl font-bold">PS4Share.one</a>
          </div>
          <div class="flex items-center">
            <a
              href="/"
              class="<%= (currentPage === 'home') ? 'text-white' : 'text-gray-300' %> hover:text-white px-3 py-2 rounded-md text-sm font-medium"
              >Home</a
            >
            <a
              href="/submit"
              class="<%= (currentPage === 'submit') ? 'text-white' : 'text-gray-300' %> hover:text-white px-3 py-2 rounded-md text-sm font-medium"
              >Submit Cheat</a
            >
            <!-- Theme Toggle Button -->
            <button
              id="themeToggle"
              class="text-gray-300 hover:text-white ml-4"
            >
              <svg
                id="themeIcon"
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <!-- Icon will change based on theme -->
              </svg>
            </button>
          </div>
        </div>
      </div>
    </nav>
  </body>
</html>
